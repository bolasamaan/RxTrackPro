{
  "name": "pharmacy-inventory-app",
  "private": true,
  "version": "1.0.1",
  "description": "A pharmacy inventory management system",
  "author": "Your Name <your.email@example.com>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "node scripts/build.js",
    "package": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bolasamaan/RxTrackPro.git"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.2.6",
    "electron-builder": "^24.6.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.pharmacy.inventory",
    "productName": "Pharmacy Inventory",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github"
    }
  }
}
